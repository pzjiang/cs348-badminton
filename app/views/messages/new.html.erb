<p> Send a message to your team</p>

<%= form_with(model: @message) do |form| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this attend from being saved:</h2>

      <ul>
        <% @message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br>

  <div class="field form-group" >
    <%= form.text_field :body, class:"form-control", placeholder:"Message Body"%>
    <%= form.hidden_field :user_id, value: current_user.id%>
    <%= form.hidden_field :team_id, value: current_user.team_id%>
    <%= form.hidden_field :status, value: "Sent"%>
  </div>


  <br>

    <div>
        <%= form.submit "Send Message", class:"btn btn-primary" %>
    </div>


<% end %>